@{
    ViewBag.Title = "Dictionary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["id"] == null && Session["Type"] != "User")
{

    Response.Redirect("/Account/Login");

}
@using Mini_Dic.Models

@{
    int id = (int)Session["id"];
}
<div class="container">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center" style="font-family:'Comic Sans MS'">
                <strong>Dictionary</strong>
            </h2>
            <hr>
            <br />

            <div style="font-family:'Comic Sans MS';font-size:20px;padding-left:450px">
                <a data-toggle="modal" href="#myModal" style="color:black">Create Dictionary</a>
                <br />
                <br />
                <a href="/Home/AllDictionaries" style="color:black">Show Dictionaries</a>
                <br />
                <br />

            </div>  

        </div>

    </div>
</div>


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" style="font-family:'Comic Sans MS';font-size:15px;margin-top:250px">
           
            <div class="modal-header" style="background:rgb(230, 218, 184)">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-primary text-center">New Dictionary</h4>
            </div>

            <form role="form" method="post" action="/Home/AddDictionary" enctype="multipart/form-data">
                <div class="modal-body" style="background:rgb(230, 218, 184)">
                    <div style=" padding-left:80px">
                        <label>Name</label>
                        <div class="inner-addon left-addon">
                            <i class="glyphicon glyphicon-pencil"></i>

                            <input required type="text" class="form-control" style="width:400px" placeholder="word" name="Name" />
                            <input type="hidden" name="UserId" value="@id" />
                        </div>
                        <br />
                    </div>

                </div>

                <div class="modal-footer" style="background:rgb(230, 218, 184)">
                    <button type="submit" class="btn btn-primary" style="margin-left:350px" name="AddDic" value="AddDic">Add</button>

                </div>

            </form>
        </div>

    </div>
</div>