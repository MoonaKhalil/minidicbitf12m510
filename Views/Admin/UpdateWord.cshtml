@{
    ViewBag.Title = "UpdateWord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["id"] == null && Session["Type"] != "Admin")
{

    Response.Redirect("/Account/Login");

}

@model Mini_Dic.Models.Dictionary


<div class="container">
   <div class="box">
                <div class="row">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center" style="font-family:'Comic Sans MS'">
                            <strong>Update</strong> Word
                        </h2>
                        <hr>
                        <br />
                    </div>
                    <form role="form" method="post" action="/Admin/Updates" enctype="multipart/form-data">
                        <div class="search-text">
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <label>Word</label>
                            <div class="inner-addon left-addon">
                                <i class="glyphicon glyphicon-pencil"></i>
                                <input required type="text" class="form-control" style="width:400px" value="@Model.Words" placeholder="@Model.Words" name="Words" />
                            </div>
                            <br />

                            <label>Meaning</label>
                            <div class="inner-addon left-addon">
                                <i class="glyphicon glyphicon-map-marker"></i>
                                <input required type="text" class="form-control" style="width:400px" value="@Model.Meaning" placeholder="@Model.Meaning" name="Meaning" />
                            </div>
                            <br />
                            <label>Synonyms</label>
                            <div class="inner-addon left-addon">
                                <i class="glyphicon glyphicon-pencil"></i>

                                <input required type="text" class="form-control" style="width:400px" value="@Model.Synonyms" placeholder="@Model.Synonyms" name="Synonyms" />
                            </div>
                            <br />

                            <label>Part Of Speech</label>
                            <div class="inner-addon left-addon">
                                <i class="glyphicon glyphicon-pencil"></i>

                                <input required type="text" class="form-control" style="width:400px" value="@Model.PartOfSpeech" placeholder="@Model.PartOfSpeech" name="PartOfSpeech" />
                            </div>
                            <br />
                            <label>Sentence</label>
                            <div class="inner-addon left-addon">
                                <i class="glyphicon glyphicon-pencil"></i>

                                <input required type="text" class="form-control" style="width:400px" value="@Model.Sentence" placeholder="@Model.Sentence" name="Sentence" />
                            </div>
                            <br />

                           <!-- <label>Audio</label>
                            <div class="inner-addon left-addon">
                                <i class="glyphicon glyphicon-music"></i>

                                <input required type="file" class="form-control" style="width:400px" name="Audio" />
                            </div>
                            <br />-->
                            <button type="submit" class="btn btn-primary" style="margin-left:350px" name="AddWord" value="AddWord">Add</button>
                        </div>
                    </form>
                </div>

            </div>
      </div>
