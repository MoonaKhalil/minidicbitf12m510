@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if(Session["id"] != null)
{

    Response.Redirect("/Home/Index");
   
}
@{
    
    var error = ViewBag.Error;
}

    <div class="container">


        <div class="box">


            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center" style="font-family:'Comic Sans MS'">
                    Login
                    <strong>YourSelf</strong>
                </h2>
                <hr>
                <br />
                
               
                    @using (Html.BeginForm("LoginRequest","Account",FormMethod.Post))
                    {
                    <div class="search-text">
                        <label>UserName</label>
                        <div class="inner-addon left-addon">
                            <i class="glyphicon glyphicon-user"></i>
                            <input required type="text" class="form-control" style="width:400px" placeholder="User Name" name="Name" />
                            </div>
                            <br />
                            <label>Password</label>
                        <div class="inner-addon left-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                            <input required type="password" class="form-control" style="width:400px" placeholder="password" name="Password"/>
                            </div>
                            
                        @if (error != null)
                        {
                            <div id="error">
                                <div class="alert" style="margin-left:200px;width:200px">
                                    <strong style="color:black;font-size:11px">invalid email or password!!!!!</strong>
                                </div>

                            </div>
                           
                        }
                            <button type="submit" class="btn btn-primary" style="margin-left:340px;margin-top:10px">Login</button>
                       
                        <div class="clearfix"></div>
                            <div class="form-group col-lg-12">
                                <input type="hidden" name="login" value="login">

                            </div>
                        </div>
                        
                    }
            </div>
        </div>

    </div>


