@{
    ViewBag.Title = "WordToAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["id"] == null && Session["Type"] != "User")
{

    Response.Redirect("/Account/Login");

}
@using Mini_Dic.Models
@model Mini_Dic.Models.User
@{
    int id = (int)Session["id"];
    int wordid = ViewBag.wordid;
    Boolean count = true;
}

<div class="container">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center" style="font-family:'Comic Sans MS'">
                <strong>Dictionaries</strong>
            </h2>
            <hr>
            <br />
            <div style="font-family:'Comic Sans MS';font-size:20px;padding-left:450px">


                @foreach (UserDictionary ud in Model.UserDictionaries)
                {

                    count = false;
                    <a href="/Dictionary/addworddic?dicid=@ud.Id&userid=@id&wordid=@wordid" style="color:black"> @ud.Name </a>
                    <br />
                    <br />
                }

            </div>
                @if(count == true)
                {
                    
                    <div class="alert alert-info" style="margin-left:340px;padding-left:50px;width:400px">
                      <strong>Info!</strong> Add dictionary first.
                    </div>
                    
                }


        </div>
    </div>
</div>


