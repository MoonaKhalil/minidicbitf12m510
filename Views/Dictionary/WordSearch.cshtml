@{
    ViewBag.Title = "WordSearch";
    Layout = "~/Views/Shared/_LayoutSearch.cshtml";
}

@model Mini_Dic.Models.Dictionary

@using Mini_Dic.Models

@{
    Dictionary d = (Dictionary) Model;
    
   
}

    <div class="container">

        <div class="box">
            <div class="col-lg-12">
                
                <br />

                <form role="form" method="post" action="/Dictionary/SearchWords">
                    <div class="search-text input-group ">
                        <input type="text" class="form-control" style="width:400px" placeholder="Type the word" name="Words" />
                        <button type="submit" class="btn btn-default" name="Search" value="Search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>



                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <input type="hidden">

                        </div>
                    </div>
                </form>

                <br/>
                <h1 class="text" style="font-family: 'Comic Sans MS'; font-size: 20px; padding-left:420px">
                    Word
                    <br />
                    <strong style="padding-left:100px">@d.Words</strong>

                </h1>

                <h1 class="text" style="font-family: 'Comic Sans MS'; font-size: 20px; padding-left: 420px">

                    Meaning

                    <br />
                    <strong style="padding-left:100px">@d.Meaning</strong>
                </h1>

                <h1 class="text" style="font-family: 'Comic Sans MS'; font-size: 20px; padding-left: 420px">

                    Synonym

                    <br />
                    <strong style="padding-left:100px">@d.Synonyms</strong>

                </h1>

                <h1 class="text" style="font-family: 'Comic Sans MS'; font-size: 20px; padding-left: 420px">

                    Part of Speech

                    <br />
                    <strong style="padding-left:100px">@d.PartOfSpeech</strong>

                </h1>
                <h1 class="text" style="font-family: 'Comic Sans MS'; font-size: 20px; padding-left: 420px">

                    Sentence

                    <br />
                    <strong style="padding-left:100px">@d.Sentence</strong>

                </h1>
                <audio id="audio">
                    <source src="~/audios/@d.Audio" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
                <h1 class="text" style="font-family: 'Comic Sans MS'; font-size: 20px;padding-left:420px">

                    Audio

                    <br />
                    <a onclick="document.getElementById('audio').play()">
                        <i class="glyphicon glyphicon-music" style="padding-left:100px"></i></a>
                    </h1>

             
     
            </div>
            @if (d == null)
            {
                <div class="alert alert-info" style="margin-left:340px;padding-left:50px;width:400px">
                    <strong>Info!</strong> No such word found.Try another
                </div>


            }


        </div>

    </div>
